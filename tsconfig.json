{
  "compilerOptions": {
    "target": "ES2020",                     // Target ECMAScript version
    "module": "CommonJS",                   // Use CommonJS for compatibility with Node.js
    "strict": true,                         // Enable all strict type-checking options
    "allowJs": true,                        // Allow JavaScript files to be part of the project
    "checkJs": true,                        // Enable type-checking in JavaScript files
    "noEmit": true,                         // Do not emit compiled files
    "esModuleInterop": true,                // Compatibility with ES module imports
    "skipLibCheck": true,                   // Skip type checking for declaration files
    "forceConsistentCasingInFileNames": true // Enforce case-sensitive imports
  },
  "include": ["src/**/*", "src/**/*.js"],   // Include JavaScript and TypeScript files in the `src` folder
  "exclude": ["node_modules", "dist"]       // Exclude `node_modules` and build output
}
